@model IEnumerable<Pedido>
@{
    Layout = "_Layout";
}

<script>
    setInterval(function () { location.reload(); }, 3000);
</script>
<div class="row">

    <table class="table col-4">
        <thead class="thead-dark" >
            <tr>
                <th scope="col" style="background-color:aqua; border-color:aqua;">&nbsp;</th>
                <th scope="col" style="background-color:aqua; border-color:aqua;">@DomStatusPedido.SEPARACAO</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Pedido p in Model)
            {
                if (p.Status == DomStatusPedido.SEPARACAO)
                {
                    <tr>
                        <td>@p.PedidoId</td>
                        <td>@p.Status</td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <table class="table col-4">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Pedido p in Model)
            {
                if (p.Status == DomStatusPedido.BALCAO)
                {
                    <tr>
                        <td>@p.PedidoId</td>
                        <td>@p.Status</td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <table class="table col-4">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Pedido p in Model)
            {
                if (p.Status == DomStatusPedido.ENTREGUE)
                {
                    <tr>
                        <td>@p.PedidoId</td>
                        <td>@p.Status</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
